@model Gamely.Models.Game

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToString()</li>
    <li>Date Added: @Model.DateAdded.ToString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>
